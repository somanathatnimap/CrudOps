
@{
    ViewBag.Title = "Signup";
}
@model Authentication_Forms.Models.Signup
<h2>Signup</h2>


@using (Html.BeginForm("Signup", "Home"))
{
    @Html.Label("Name")
    @Html.TextBox("name")
    <br />
    @Html.Label("Email:")
    @Html.TextBox("email")
    <br />
    @Html.Label("Password:")
    @Html.TextBox("password")
    <br />
    <input type="submit" name="sub1" value="Save" />
}
@Html.ActionLink("Index", "Index", "Home")
@Html.ActionLink("Login", "Login", "Home")



