
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>


@using (Html.BeginForm("Login", "Home",FormMethod.Post))
{
  
    @Html.Label("Email: ")
    @Html.TextBox("email")
    <br />
    @Html.Label("Password: ")
    @Html.TextBox("password")
    <br />
    <input type="submit" value="submit">
}
@Html.ActionLink("Signup", "Signup", "Home")