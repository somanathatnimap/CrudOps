@model Authentication_using_forms.Models.Credintials

@{
    ViewBag.Title = "Signup";
}

<h2>Signup</h2>

@using (Html.BeginForm("Signup","Home"))
            {
                @Html.Label("Name: ")
                @Html.TextBox("name")<br />
                @Html.Label("Email: ")
                @Html.TextBox("email")<br />
                @Html.Label("Password: ")
                @Html.TextBox("password")<br />
                <input type="submit"  value="submit">
            }
@Html.ActionLink("Login","Login","Home")