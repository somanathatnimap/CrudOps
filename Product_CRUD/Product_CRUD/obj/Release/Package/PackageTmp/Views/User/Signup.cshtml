
@{
    ViewBag.Title = "Signup";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Signup","User"))
{

    <div class="mb-3">
        <label for="Fname" class="form-label">First Name: </label>
        <input type="text" class="form-control" name="Fname">
    </div>
    <div class="mb-3">
        <label for="Lname" class="form-label">Last Name: </label>
        <input type="text" class="form-control" name="Lname">
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email Address: </label>
        <input type="email" class="form-control" name="Email">
    </div>
    <div class="mb-3">
        <label for="Password" class="form-label">Password</label>
        <input type="password" class="form-control" name="Password">
    </div>
    <label>
        Select Role:
    </label>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="Role" id="flexRadioDisabled" value="true">
        <label class="form-check-label" for="flexRadioDisabled">Admin</label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="radio" name="Role" id="flexRadioCheckedDisabled" value="false" checked>
        <label class="form-check-label" for="flexRadioCheckedDisabled">User</label>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
}

