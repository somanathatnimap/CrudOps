@model IEnumerable<Product_CRUD.Models.categories>
@{
    ViewBag.Title = "Index";
}
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2> Welcome @TempData["userRole"] Here is List of Categories...!</h2>
<a href="@Url.Action("Categories","Home")" class="btn btn-outline-dark">Create New</a>

@*table started*@
<center><p style='color: red;'>@Html.Raw(TempData["Insert"])</p></center>
<div class="container mt-5">
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Category Name</th>
                <th scope="col">Category Description</th>
                <th scope="col">Select Categories</th>
                <th scope="col">Status</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@Html.DisplayFor(ModelItem => item.id)</th>
                    <td>@Html.DisplayFor(model => item.category_name)</td>
                    <td>@Html.DisplayFor(model => item.category_description)</td>

                    <td>
                        @if (item.catergory_status == true)
                        {
                            <a href="@Url.Action("product_index","Home",new {id=item.id})" class="btn btn-outline-info">View</a>
                        }
                    </td>
                    <td>
                        @using (Html.BeginForm("Catergory_Status", "Home", new { id = item.id }))
                        {
                            <input type="submit" class="btn btn-outline-primary" value="@(item.catergory_status ? "Deactivate" : "Activate")" />
                        }

                    </td>
                    @if (item.catergory_status == true)
                    {
                        <td>
                            <a href="@Url.Action("update_categories","Home",new {id=item.id})" class="btn btn-outline-info">Update</a>
                        </td>
                        <td>
                            <a href="@Url.Action("delete_categories","Home",new {id=item.id})" class="btn btn-outline-danger">Delete</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", "Home", new { page = i })">@i</a>
            </li>
        }
    </ul>
</nav>

