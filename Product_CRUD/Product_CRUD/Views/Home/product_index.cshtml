
@model IEnumerable<Product_CRUD.Models.Products>
@{

    ViewBag.Title = "product_index";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Products...!</h2>
<a href="@Url.Action("products","Home")" class="btn btn-outline-dark">Create New</a>
@*<a href="@Url.Action("update_categories","Home",new {id=})" class="btn btn-outline-info">Update</a>*@


@*table started*@

<div class="container mt-5">
    <h2 class="mb-4">Select Product</h2>
    <p style="color:forestgreen">@TempData["InsertMessage"]</p>
    <p style="color:red">@TempData["InsertFailMessage"]</p>
    <p style="color:forestgreen">@TempData["UpdateMessage"]</p>
    <p style="color:red">@TempData["UpdateFailedMessage"]</p>
    <p style="color:forestgreen">@TempData["DeleteMessage"]</p>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Product Name</th>
                <th scope="col">Product Prize</th>
                <th scope="col">Product Description</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <th scope="row">@Html.DisplayFor(ModelItem => item.id)</th>
                    <td>@Html.DisplayFor(model => item.Product_name)</td>
                    <td>@Html.DisplayFor(model => item.Product_price)</td>
                    <td>@Html.DisplayFor(model => item.Product_description)</td>
                    <td>
                        <a href="@Url.Action("update_categories","Home",new {id=item.id})" class="btn btn-outline-info">Update</a>
                    </td>
                    <td>
                        <a href="@Url.Action("delete_categories","Home",new {id=item.id})" class="btn btn-outline-danger">Delete</a>
                    </td>

                </tr>

            }
        </tbody>
    </table>
</div>

